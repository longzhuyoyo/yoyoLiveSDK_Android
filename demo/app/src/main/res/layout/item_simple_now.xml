<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="167dp"
    android:layout_height="wrap_content"
    android:minHeight="100dp">
    <LinearLayout
        android:id="@+id/anchor_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp">
        <FrameLayout
            android:id="@+id/anchor_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#d6d7dd">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/longzhu_gray_icon"/>
            <ImageView
                android:id="@+id/anchor_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
            <!--直播图标-->
            <TextView
                android:id="@+id/anchor_room_living"
                android:layout_width="@dimen/act_attention_listview_status_width"
                android:layout_height="@dimen/act_attention_listview_status_height"
                android:layout_gravity="right|top"
                android:background="@color/mainBgRedColor"
                android:gravity="center"
                android:text="@string/live_text"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/act_attention_listview_status_textsize"
                android:visibility="visible" />

            <!-- 主播信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/anchor_level"
                    android:layout_width="wrap_content"
                    android:layout_height="13.5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"/>
                <TextView
                    android:id="@+id/anchor_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="主播名字★诗雨"
                    android:textColor="@color/mainWhiteColor"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/listener_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="4dp"
                    android:drawablePadding="3dp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="66666"
                    android:textColor="@color/mainWhiteColor"
                    android:textSize="12sp" />
            </LinearLayout>

        </FrameLayout>
        <TextView
            android:id="@+id/anchor_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="标题"/>
    </LinearLayout>
</RelativeLayout>